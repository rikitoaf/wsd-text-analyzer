{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "target": "ES2020",
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*", "types"]
}
